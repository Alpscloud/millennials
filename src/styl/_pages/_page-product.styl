.product
	display flex
	flex-wrap nowrap
	transform translateY(0)
	
	
		
	&-information
		position relative
		padding-left 130px
		&__content
			max-width 370px
			padding-top 50px
			
	&-title
		text-transform uppercase
		font-size 18px
		font-weight 700
		margin-bottom 5px
		
	&-prices
		text-transform uppercase
		white-space nowrap
		color red
		font-size 20px
		font-weight 700
		margin-bottom 20px
		span
			margin-right 6px
		.old-price
			color $basic-black-color
			
	&-param
		text-transform uppercase
		font-size 13px
		margin-bottom 15px
		
	&-characteristics
		font-size 13px
		margin-bottom 30px
		
	&-sizes
		display flex
		flex-wrap wrap
		justify-content flex-start
		padding 10px 0
		border-top 1px solid black
		border-bottom 1px solid black
		margin-bottom 30px
		
	&-size
		width 33.333%
		&__label
			display block
			
			text-align center
			input
				
				display none
				&:checked
					+ span
						background-color #f5f5f5
						font-weight 600
			span
				font-size 14px
				padding 10px
				white-space nowrap
				display block
				transition all .17s ease-in-out
			&:hover
				cursor pointer
				span
					background-color #f5f5f5
					
	&-btns
		.btn
			margin-bottom 10px
			&:last-child
				margin-bottom 0
				
.product-articul
	font-size 12px
	margin-bottom 10px
	color $light-text-color
	
.product-quantity
	display flex
	flex-wrap nowrap
	width 100px
	&__input
		flex 1
		width 100%
		text-align center
		display block
		margin-left 5px
		margin-right 5px
		-webkit-appearance none
		appearance none
	&__btn
		width 25px
		height 25px
		flex-col-center()
		font-weight 700
		color $basic-black-color
		background-color $grey-bg
		&:hover
			background-color $basic-black-color
			color $basic-white-color
			
.sect__another-products
	padding-top 100px