input[type="search"]
	appearance none
	-webkit-appearance none			

input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-results-button,
input[type="search"]::-webkit-search-results-decoration
	appearance none
	-webkit-appearance none
	backface-visibility hidden
	transform translate3d(0,0,0)

input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button 
	-webkit-appearance none
	margin 0

input[type=number]
	-moz-appearance textfield 


input[type=date]
	padding-bottom 0

.form
	&-groups__row
		margin-bottom 30px
		&:last-child
			margin-bottom 0
	&-label
		display block
		span
			color $light-text-color
			font-size 14px
			display block
			margin-bottom 4px
		.form-input
			border-color $basic-black-color
	&-input
		display block
		width 100%
		border-bottom 1px solid $grey-bg
		padding 0 0 5px
		text-align left
		font 14px $Reg
		color $text-color
		&:hover,
		&:focus
			border-color $basic-black-color
		&::-webkit-input-placeholder
			font 14px $Reg
			color rgba($light-text-color, .5)
		&::-moz-placeholder
			font 14px $Reg
			color rgba($light-text-color, .5)
		&:-moz-placeholder
			font 14px $Reg
			color rgba($light-text-color, .5)
		&:-ms-input-placeholder
			font 14px $Reg
			color rgba($light-text-color, .5)
			
		&.is-error
			border-color #e32526
			
	&-group
		position relative
		margin-bottom 30px
		&:last-child
			margin-bottom 0
			
		&__label
			display inline-block
			margin-bottom 5px
			
	&-textarea
		min-height 200px
	

.form-select
	border none
	border-bottom 1px solid $basic-black-color

.form
	&-checkbox
		display inline-block
		position relative
		padding-left 25px
		font 1em $Reg
		line-height 1
		color $text-color
		&:before
			pseudo()
			transition all .17s ease-in-out
			position absolute
			left 0
			vertical-center()
			border-radius 2px
			width 16px
			height 16px
			border 1px solid $text-color
			background-position 50% 50%
			background-repeat no-repeat
			background-size 12px 12px
			
		&__label
			display inline-block
			input
				display none
				&:checked
					+ span
						&:before
							background-color $text-color
							background-image url('../img/icons/svg/checkbox-ic.svg')
							
.form
	&-radio
		display inline-block
		position relative
		padding-left 25px
		font 1em $Reg
		line-height 1
		color $text-color
		&:before
			pseudo()
			transition all .17s ease-in-out
			position absolute
			left 0
			vertical-center()
			border-radius 50%
			width 16px
			height 16px
			border 1px solid $text-color
		&:after
			pseudo()
			transition all .17s ease-in-out
			position absolute
			left 2px
			top 2px
			width 12px
			height 12px
			border-radius 50%
			background-color $text-color
			display none
			

			
		&__label
			display inline-block
			input
				display none
				&:checked
					+ span
						&:after
							display block


