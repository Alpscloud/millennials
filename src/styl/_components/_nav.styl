.nav
	width 230px
	text-align center
	pointer-events auto
	background-color $color-bg
	height 100vh
	overflow-y auto
	padding-bottom 80px
	position fixed
	top 0
	left 0
	padding-top 48px
	&-overlay
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		display none
	&-list
		text-align right
		padding-left 25px
		padding-right 25px
		a
			display block
			padding 10px
			text-transform uppercase
			text-align right
			f-bold()
			color $text-color
			background-color rgba($basic-white-color, .5)
			&:hover
				background-color rgba($basic-white-color, 1)
				
		li
			&:last-child
				margin-top 50px
				
			&.has-submenu-item
				&:hover
					cursor pointer
			

.sub-menu
	padding-top 10px
	display none
	a
		font-weight normal
		padding 0
		background-color transparent
		font-size 12px
		&:hover
			text-decoration underline
			background-color transparent
	li
		margin-bottom 7px
		display block
		&:last-child
			margin-top 0
		