.nav
	width 230px
	text-align center
	pointer-events auto
	background-color $color-bg
	height 100vh
	overflow-y auto
	padding-bottom 80px
	position fixed
	top 0
	left 0
	padding-top 48px
	z-index 100
	&-overlay
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		display none
	&-list
		text-align right
		padding-left 25px
		padding-right 25px
		a
			display block
			padding 10px
			text-transform uppercase
			text-align right
			f-bold()
			color $text-color
			background-color rgba($basic-white-color, .5)
			&:hover
				background-color rgba($basic-white-color, 1)
				
		li
			position relative	
			background-color rgba($basic-white-color, .5)
			&:last-child
				margin-top 50px
			&.is-active
				a
					font-weight 700
					
			&.has-submenu-item
				> a
					padding-right 40px
				&:hover
					cursor pointer
					
			&.last-item
				background-color transparent
				span
					display inline-block
					padding-right 23px
				.btn-toggle
					width 20px
					height 17px
					top 2px
					
				.sub-menu
					padding-right 0
					

			&.is-current
				
						
				.sub-menu
					display block
			

.sub-menu
	padding-top 10px
	display none
	padding-right 10px
	padding-bottom 10px
	a
		font-weight normal
		padding 0
		background-color transparent
		font-size 12px
		&:hover
			text-decoration underline
			background-color transparent
	li
		margin-bottom 7px
		display block
		background-color transparent
		&:last-child
			margin-bottom 0
			margin-top 0
			
		