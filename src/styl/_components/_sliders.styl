.slider
	&__loader
		position absolute
		fullSize()
		z-index 10
		background-color $light-color
		transition all .15s ease-in-out
		&:before
			pseudo()
			width 30px
			height 30px
			position absolute
			position-center()
			background url('../img/slider-loader.gif') 50% 50% no-repeat / 30px 30px
			
		&.is-loaded
			opacity 0
			visibility hidden
			pointer-events none


.slick-dots
	font-size 0
	white-space nowrap
	li
		margin-bottom 10px
		&:last-child
			margin-bottom 0
		&.slick-active
			button
				background-color $basic-black-color
	button
		display inline-block
		width 8px
		height 8px
		background-color red
		font-size 0
		text-indent -999
		border-radius 50%
		background-color #b5b5b5

.promo-slider
	//min-height 100vh
	.slick-track
		display flex
		flex-wrap nowrap
		
	.slick-slide
		float none
		height auto
		> div
			height 100%
			
.promo-slide
	height 100%
	&__picture
		display block
		height 100%
		img
			display block
			height 100%
			object-fit cover
			
// product
.product-imgs__slider
	position relative
	
	.slick-dots
		position absolute
		top 10px
		left 10px
		z-index 1
.product-img
	display block
	position relative
	margin-bottom 20px
	&:hover
		opacity .85
	&:before
		pseudo()
		position absolute
		z-index 1
		bottom 20px
		left 20px
		width 30px
		height 30px
		background url('../img/icons/svg/zoom.svg') 50% no-repeat / contain
	&:last-child
		margin-bottom 0
	img
		display block
		
.another-products
	margin-left -20px
	.slick-dots
		position relative
		text-align center
		margin-top 60px
		li
			display inline-block
			margin-bottom 0
			margin-right 8px
			&:last-child
				margin-right 0
	.slick-slide
		padding-left 20px
		padding-right 20px
		
	.product-card__title
		font-size 16px
		font-weight 700
	.product-card__prices
		font-size 14px