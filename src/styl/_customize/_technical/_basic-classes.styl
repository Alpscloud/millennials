.disable-hover,
.disable-hover * 
	pointer-events none !important

.gutters
	padding $gutters
	
.gutter
	&-top
		padding-top $gutter-top
	&-bottom
		padding-bottom $gutter-bottom
	
.w3c
	visibility hidden
	display none
	
.content__wrapper
	overflow hidden
	width 100%
	height 100%

.sect-title
	text-transform uppercase
	margin-bottom 20px
	font-size 1.5em
	font-weight 700
	line-height 1.2
	span
		font-weight 500
		text-transform none
		font-size 18px
		color #949494
		display block
		margin-top 5px
		
	&-sm
		text-transform none
		font-size 1.25em
		margin-bottom 40px
		
.page-entering
	margin-bottom 40px
	.sect-title
		margin-bottom 0
		margin-right 15px	
	

		
.text-center
	text-align center
	
.text-left
	text-align left
	
.text-right
	text-align right
	
.basic-white-color
	color $basic-white-color

.basic-black-color
	color $basic-black-color
	
.light-text-color
	color $light-text-color
	
.dark-text-color
	color $dark-text-color
	
.accent-color
	color $accent-color
	
.content-img
	display block
	margin 0 auto
	max-width 100%
	max-height 100%
	width auto
	height auto
	
.bg
	bg(50%, 50%)
	
.bg-with-overlay
	position relative
	bg(50%, 50%)
	&:before
		pseudo()
		position absolute
		fullSize()
		background-color rgba($bg-overlay-color, $bg-overlay-opacity)
	.container
		position relative
		z-index 2
		
.color-bg
	background-color $color-bg
	
.visually-hidden
	position absolute
	clip rect(0 0 0 0)
	width 1px
	height 1px
	margin -1px
	z-index -999
	opacity 0
	visiiblity hidden
	
.thumbnail
	position relative
	overflow hidden
	width 100%
	padding-top 50%
	img
		display block
		position absolute
		position-center()
		width 100%
		height 100%
		object-fit cover
	

.content
	color #808080
	font-size 20px
	max-width 1000px
	font-family 'Verdana', Arial, sans-serif
	*
		&:last-child
			margin-bottom 0
			
	h1
		font-size 24px
		color $basic-black-color
		margin-bottom 40px
			
	h1,h2,h3,h3,h4,h5,h6
		line-height 1
		font-weight 700
		text-transform uppercase
		
	h2
		font-size 22px
		margin-bottom 20px
		
	h3
		font-size 22px
		margin-bottom 20px
		text-transform none
		
	strong, b
		font-weight 700
		font-style bold
		
	p
		margin-bottom 20px
		
	p + ul,
	p + ol
		margin-top -10px
	ul, ol
		margin-bottom 30px
		li
			display block
			position relative
			margin-bottom 10px
			
			&:last-child
				margin-bottom 0
				
	img
		height auto
		width auto
		max-width 240px
		display inline-block
		vertical-align middle
				
	ul
		li
			&:before
				pseudo()
				width 4px
				height 4px
				border-radius 50%
				margin-right 6px
				background-color $text-color
				vertical-align middle
				
	ol
		counter-reset list
		li
			&:before
				counter-increment list
				content counter(list) ". "
				display inline-block
				margin-right 4px
				vertical-align middle
				
	a
		color inherit
		text-decoration underline
		&:hover
			text-decoration none
				



.hidden-desktop
	display none