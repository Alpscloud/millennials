// Media queris mixins add there
@import '../../node_modules/stylus-media-queries/index.styl'
/* -------Screen sizes----------- 
+screen(minWidth, maxWidth)
+max-screen(maxWidth)
+min-screen(minWidth)
+screen-height(minHeight, maxHeight)
+max-screen-height(maxHeight)
+min-screen-height(minHeight)
*/

+max-screen(1450px)
	.main,
	.footer
		padding-left 200px
	.nav
		width 200px
		
		&-list
			padding-left 10px
			padding-right 10px
			
		.logo
			img
				max-width 180px
				

+max-screen(1100px)
	.hidden-tablet
		display none
	.visible-tablet
		display block
		
	.main,
	.footer
		padding-left 0
		
	.nav
		transform translateX(-102%)
		z-index 90
		background-color transparent
		transition all .3s ease-in-out
		opacity 0
		visibility hidden
		pointer-events none
		padding 0
		width 100%
		&-content
			width 280px
			padding 20px 25px
			background-color $basic-white-color
			position relative
			z-index 1
			height 100vh
			overflow-y auto
		&-overlay
			display block
		&.is-opened
			opacity 1
			visibility visible
			pointer-events auto
			transform translateX(0)
		.btn-close
			display inline-block
			top 10px
			left 10px
			z-index 1
		.logo
			margin-bottom 30px
			img
				max-width 100%
				
		&-list
			padding 0
			text-align left
			li
				border-bottom 1px solid #d0d0d0
				span
					font-weight bold
					font-size 20px
				
				&:first-child
					border-top 1px solid #d0d0d0
					
				&.last-item
					border none
					font-weight bold
					.sub-menu
						padding-top 15px
						
					.btn-toggle
						width 30px
				
					
				&.last-item
					margin-top 30px
			a
				font-size 18px
				font-weight normal
				padding 15px 0
				background-color transparent
				text-align left
				
	.page-inner
		.header-content
			background-color $color-bg
			
		.page-content
			padding 40px 20px
				
	.sub-menu
		padding-top 0
		padding-bottom 15px
		li
			border none !important
			margin-bottom 10px
			a
				font-weight normal
				font-size 13px
				padding 0
				
	.btn-toggle
		height 56px

	.header
		background-color $color-bg
		
		&-content
			background-color $color-bg
			position relative
			z-index 1
			top 0
			padding 7px 10px
			pointer-events auto
			&.is-fixed
				position fixed
				top 0
				left 0
				z-index 30
		&-content__row
			justify-content space-between
			align-items center
		
	.footer
		background-color #f3f3f1
		padding 15px 15px 70px
		color $text-color
		&__row
			flex-wrap wrap
			padding-left 0
			
		p
			width 100%
			text-align center
			margin-bottom 20px
			&:last-child
				margin-bottom 0
				

	.search
		position fixed
		top 0
		left 0
		width 100%
		height 100%
		z-index 30
		background-color rgba(255, 255, 255, 0.9)
		transform none
		display flex
		flex-direction column
		align-items center
		justify-content center
		transition all .3s ease-in-out
		opacity 0
		visibility hidden
		pointer-events none
		&.is-opened
			opacity 1
			visibility visible
			pointer-events auto
		.btn-close
			display inline-block
		&-form
			width 100%
			justify-content center
		&-input
			margin-left 0
			width 90%
			
	.langs
		right 10px
		bottom 10px
		
	.currency
		left 10px
		bottom 10px
		
	.cart-link
		background-color transparent
		
		width 20px
		height 20px
		margin-right 20px
		&__count
			font-size 8px
			width 14px
			height 14px
			top -5px
			right -5px
			
	.login-link
		background-color transparent
		width 20px
		height 20px
		
	.header-content__row
		flex-wrap nowrap
		
	.header-tools
		margin-left 15px
			
	.content
		font-size 14px
		line-height 17px
		h1
			text-align center
			font-weight normal
			font-size 22px
			
		h2,h3
			font-size 18px
			
	.product-card
		&__wrapper
			width 33.3333%
			padding 10px
		&__picture
			margin-bottom 10px
		&__title
			font-size 13px
			margin-bottom 3px
			
		&__prices
			font-size 12px
		
	.catalog__row
		margin-left -10px
		margin-right -10px
		
	.btn-filter
		width 100%
		top 50px
		background-color $basic-white-color
		text-align right
		right 0
		padding 15px 10px
		font-weight normal
		font-size 13px
		
	.catalog
		margin-top 0
	
	.page-inner
		.page-content
			padding-left 10px
			padding-right 10px
			
	.hidden-ic
		display inline-block
		
	// Product
	.product
		flex-wrap wrap
		margin-top -40px
		
		&-imgs
			width calc(100% + 20px)
			margin-bottom 20px
			margin-left -10px
			margin-right -10px
		&-information
			width 100%
			padding-left 0
			
			&__content
				max-width 100%
				padding-top 0
				
		&-size
			width 25%
			
		&-img
			position relative
			padding-top 150%
			overflow hidden
			
			&:before
				bottom 10px
				left 10px
			img, picture
				position absolute
				position-center()
				width 100%
				height 100%
				object-fit cover
		

+max-screen(700px)
	.product-card__wrapper
		width 50%
		padding 10px 3px
		
	.catalog__row
		margin-left -3px
		margin-right -3px		
		
	.product-size
		width 33.33333%
		
	.sect__another-products
		padding-top 70px
		
+max-screen(500px)
	.another-products
		margin-left -5px
		.slick-slide
			padding 0 5px
		
		.slick-dots
			margin-top 30px
		
+max-screen(420px)
	.logo__col
		.logo
			margin-left 5px
			img
				max-width 160px
				
	.product-size
		width 50%