// Media queris mixins add there
@import '../../node_modules/stylus-media-queries/index.styl'
/* -------Screen sizes----------- 
+screen(minWidth, maxWidth)
+max-screen(maxWidth)
+min-screen(minWidth)
+screen-height(minHeight, maxHeight)
+max-screen-height(maxHeight)
+min-screen-height(minHeight)
*/

+max-screen(1450px)
	.main,
	.footer
		padding-left 200px
	.nav
		width 200px
		
		&-list
			padding-left 10px
			padding-right 10px
			
		.logo
			img
				max-width 180px
				

+max-screen(1100px)
	.hidden-tablet
		display none
	.visible-tablet
		display block
		
	.main,
	.footer
		padding-left 0
		
	.nav
		transform translateX(-102%)
		z-index 90
		background-color transparent
		transition all .3s ease-in-out
		opacity 0
		visibility hidden
		pointer-events none
		padding 0
		width 100%
		&-content
			width 280px
			padding 20px 25px
			background-color $basic-white-color
			position relative
			z-index 1
			height 100vh
			overflow-y auto
		&-overlay
			display block
		&.is-opened
			opacity 1
			visibility visible
			pointer-events auto
			transform translateX(0)
		.btn-close
			display inline-block
			top 10px
			left 10px
			z-index 1
		.logo
			margin-bottom 30px
			img
				max-width 100%
				
		&-list
			padding 0
			text-align left
			li
				border-bottom 1px solid #d0d0d0
				span
					font-weight bold
					font-size 20px
				
				&:first-child
					border-top 1px solid #d0d0d0
					
				&.last-item
					border none
					font-weight bold
				
					
				&.last-item
					margin-top 30px
			a
				font-size 18px
				font-weight normal
				padding 15px 0
				background-color transparent
				text-align left
				
	.sub-menu
		padding-top 20px
		li
			border none !important
			margin-bottom 10px
			a
				font-weight normal
				font-size 13px
				padding 0

	.header
		background-color $color-bg
		
		&-content
			background-color $color-bg
			position relative
			z-index 1
			top 0
			padding 7px 10px
			pointer-events auto
			&.is-fixed
				position fixed
				top 0
				left 0
				z-index 30
		&-content__row
			justify-content space-between
			align-items center
		
	.footer
		background-color #f3f3f1
		padding 15px 15px 70px
		color $text-color
		&__row
			flex-wrap wrap
			padding-left 0
			
		p
			width 100%
			text-align center
			margin-bottom 20px
			&:last-child
				margin-bottom 0
				

	.search
		position fixed
		top 0
		left 0
		width 100%
		height 100%
		z-index 30
		background-color rgba(255, 255, 255, 0.9)
		transform none
		display flex
		flex-direction column
		align-items center
		justify-content center
		transition all .3s ease-in-out
		opacity 0
		visibility hidden
		pointer-events none
		&.is-opened
			opacity 1
			visibility visible
			pointer-events auto
		.btn-close
			display inline-block
		&-form
			width 100%
			justify-content center
		&-input
			margin-left 0
			width 90%
			
	.langs
		right 10px
		bottom 10px
		
	.currency
		left 10px
		bottom 10px
		
	.cart-link
		background-color transparent
		position absolute
		right 10px
		vertical-center()
		width 20px
		height 20px
		&__count
			font-size 8px
			width 14px
			height 14px
			top -5px
			right -5px
			
+max-screen(420px)
	.logo__col
		.logo
			margin-left 5px
			img
				max-width 160px